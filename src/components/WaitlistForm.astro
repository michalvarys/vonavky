    outline: none;
    border-color: var(--color-gold);
    box-shadow: 0 0 0 3px rgba(255, 215, 0, 0.15);
  }

  .form-group input.invalid {
    border-color: var(--color-error);
    box-shadow: 0 0 0 3px rgba(231, 76, 60, 0.15);
  }

  .error-message {
    display: block;
    font-size: 0.8rem;
    color: var(--color-error);
    min-height: 1.2rem;
    margin-top: var(--space-xs);
  }

  .waitlist__submit {
    width: 100%;
    margin-top: var(--space-sm);
    padding: 1.2rem;
    font-size: 1.25rem;
    animation: pulse-glow 3s ease-in-out infinite;
  }

  .waitlist__note {
    margin-top: var(--space-md);
    font-size: 0.8rem;
    color: var(--color-text-muted);
  }

  /* Success state */
  :global(.success-message) {
    text-align: center;
    padding: var(--space-md) 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  :global(.success-confirm) {
    font-family: var(--font-heading);
    font-size: clamp(1.3rem, 4vw, 1.8rem);
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    margin-bottom: var(--space-lg);
  }

  /* Upsell block */
  /* :global(.upsell) {
    padding: var(--space-lg);
    border: 2px solid transparent;
    border-radius: 12px;
    background:
      linear-gradient(var(--color-bg-primary), var(--color-bg-primary)) padding-box,
      linear-gradient(135deg, var(--color-gold-dark), var(--color-gold-light), var(--color-gold-mid), var(--color-gold-dark)) border-box;
    text-align: center;
  } */

  :global(.upsell__text) {
    font-family: var(--font-heading);
    font-size: clamp(1.2rem, 4vw, 1.6rem);
    color: var(--color-text-primary);
    line-height: 1.4;
    margin-bottom: var(--space-lg);
  }

  :global(.upsell__text strong) {
    display: block;
    font-size: clamp(1.8rem, 6vw, 2.8rem);
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
    letter-spacing: 0.05em;
    margin-top: var(--space-sm);
  }

  :global(.upsell__cta) {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: fit-content;
    padding: 1.1rem 2.5rem;
    font-size: clamp(1.1rem, 3vw, 1.3rem);
    animation: pulse-glow 3s ease-in-out infinite;
    margin-bottom: var(--space-sm);
  }

  :global(.upsell__countdown) {
    font-size: 1rem;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  :global(.upsell__timer) {
    font-family: var(--font-body);
    font-size: 1.4rem;
    font-weight: 700;
    letter-spacing: 0.05em;
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  :global(.upsell__note) {
    display: block;
    font-size: 0.85rem;
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 500;
    margin-top: 28px;
  }

  @media (max-width: 640px) {
    .waitlist {
      padding: 0;
      justify-content: center;
      min-height: 70vh;
      background: var(--color-bg-primary);
      flex-direction: column;
      align-items: stretch;
    }

    .waitlist__scene {
      position: relative;
      inset: auto;
      width: 100%;
      height: 60vw;
      flex-shrink: 0;
    }

    .waitlist__container {
      margin-right: auto;
      padding: 2.5rem 1rem;
    }

    .waitlist__card {
      padding: 1.5rem 1.25rem;
    }

    .waitlist__heading {
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
    }

    .waitlist__subtitle {
      font-size: 0.95rem;
      line-height: 1.5;
      margin-bottom: 1.5rem;
    }

    .waitlist__form {
      gap: 0.5rem;
    }

    .form-group label {
      font-size: 0.8rem;
      margin-bottom: 0.2rem;
    }

    .form-group input {
      padding: 0.75rem 0.85rem;
      font-size: 0.95rem;
    }

    .fragrance-toggle__label {
      padding: 0.6rem 0.4rem;
      font-size: 0.85rem;
    }

    .error-message {
      font-size: 0.75rem;
      min-height: 1rem;
      margin-top: 0.15rem;
    }

    .waitlist__submit {
      padding: 1rem;
      font-size: 1.1rem;
      margin-top: 0.25rem;
    }

