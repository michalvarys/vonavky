---
import type { SiteContent } from "../data/content";
interface Props {
  waitlist: SiteContent["waitlist"];
  variant: string;
}
const { waitlist, variant } = Astro.props;
const apiUrl = import.meta.env.PUBLIC_API_URL || "http://localhost:3000";
---

<section class="waitlist" id="waitlist">
  <div class="waitlist__scene" aria-hidden="true">
    <img
      src="spray/bg.jpg"
      alt=""
      class="waitlist__layer waitlist__layer--bg"
      loading="lazy"
    />
    <img
      src="spray/hand-parfume.png"
      alt=""
      class="waitlist__layer waitlist__layer--hand"
      loading="lazy"
    />
    <img
      src="spray/spray.png"
      alt=""
      class="waitlist__layer waitlist__layer--spray"
      loading="lazy"
    />
  </div>
  <div class="waitlist__container">
    <div
      class="waitlist__card animate-on-scroll"
      style="transition-delay: 1.5s;"
      data-variant={variant}
      data-api-url={apiUrl}
      data-upsell-confirm={waitlist.upsell.confirm}
      data-upsell-text={waitlist.upsell.text}
      data-upsell-highlight={waitlist.upsell.highlight}
      data-upsell-cta={waitlist.upsell.cta}
      data-upsell-payment-link={waitlist.upsell.paymentLink}
      data-upsell-note={waitlist.upsell.note}
    >
      <h2 class="waitlist__heading">{waitlist.heading}</h2>
      <p class="waitlist__subtitle" set:html={waitlist.subtitle} />

      <form id="waitlist-form" class="waitlist__form" novalidate>
        <div class="form-group">
          <label>Mám zájem o</label>
          <div class="fragrance-toggle">
            <input
              type="radio"
              id="fragrance-him"
              name="fragrance"
              value="him"
              class="fragrance-toggle__input"
            />
            <label for="fragrance-him" class="fragrance-toggle__label"
              >Pro něj</label
            >
            <input
              type="radio"
              id="fragrance-her"
              name="fragrance"
              value="her"
              class="fragrance-toggle__input"
            />
            <label for="fragrance-her" class="fragrance-toggle__label"
              >Pro ni</label
            >
            <input
              type="radio"
              id="fragrance-both"
              name="fragrance"
              value="both"
              class="fragrance-toggle__input"
            />
            <label for="fragrance-both" class="fragrance-toggle__label"
              >Obojí</label
            >
          </div>
          <span class="error-message" aria-live="polite"></span>
        </div>

        <div class="form-group">
          <label for="name">Jméno a příjmení</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            autocomplete="name"
            placeholder="Jan Novák"
          />
          <span class="error-message" aria-live="polite"></span>
        </div>

        <div class="form-group">
          <label for="email">E-mail</label>
          <input
            type="email"
            id="email"
            name="email"
            required
            autocomplete="email"
            placeholder="jan@email.cz"
          />
          <span class="error-message" aria-live="polite"></span>
        </div>

        <div class="form-group">
          <label for="phone">Telefon</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            required
            autocomplete="tel"
            inputmode="numeric"
            placeholder="+420 123 456 789"
          />
          <span class="error-message" aria-live="polite"></span>
        </div>

        <button type="submit" class="btn-gold waitlist__submit">
          {waitlist.submit}
        </button>
      </form>

      <p class="waitlist__note">
        {waitlist.note}
      </p>
    </div>
  </div>
</section>

<script>
  const OFFER_DURATION = 24 * 60 * 60 * 1000; // 24 hours in ms

  const form = document.getElementById("waitlist-form") as HTMLFormElement;
  const card = form.closest(".waitlist__card") as HTMLElement;
  const API_URL = card.dataset.apiUrl || "http://localhost:3000";
  const variant = card.dataset.variant || "premium";
  const STORAGE_KEY = `waitlist_${variant}`;

  // Shared form data — populated on submit or from localStorage, reused for checkout
  let formData: {
    fragrance: string;
    name: string;
    email: string;
    phone: string;
  } | null = null;
  let waitlistEntryId: number | null = null;

  // --- localStorage helpers ---
  interface WaitlistData {
    signedUpAt: number;
    entryId: number | null;
    email: string;
    name: string;
    phone: string;
    fragrance: string;
  }

  function getSavedData(): WaitlistData | null {
    try {
      const raw = localStorage.getItem(STORAGE_KEY);
      return raw ? JSON.parse(raw) : null;
    } catch {
      return null;
    }
  }

  function saveData(data: WaitlistData) {
    try {
      localStorage.setItem(STORAGE_KEY, JSON.stringify(data));
    } catch {}
  }

  // --- Countdown ---
  function formatTime(ms: number): string {
    const totalSec = Math.floor(ms / 1000);
    const h = Math.floor(totalSec / 3600);
    const m = Math.floor((totalSec % 3600) / 60);
    const s = totalSec % 60;
    return `${String(h).padStart(2, "0")}:${String(m).padStart(2, "0")}:${String(s).padStart(2, "0")}`;
  }

  function startCountdown(signedUpAt: number, timerEl: HTMLElement) {
    function tick() {
      const remaining = Math.max(0, OFFER_DURATION - (Date.now() - signedUpAt));
      timerEl.textContent = formatTime(remaining);
      if (remaining <= 0) {
        clearInterval(intervalId);
        timerEl.textContent = "00:00:00";
      }
    }
    tick();
    const intervalId = setInterval(tick, 1000);
  }

  // --- Show upsell (reusable for both fresh submit & returning visitor) ---
  function showUpsell(saved: WaitlistData) {
    // Populate shared state for checkout
    formData = {
      fragrance: saved.fragrance,
      name: saved.name,
      email: saved.email,
      phone: saved.phone,
    };
    waitlistEntryId = saved.entryId;

    // Hide form elements
    form.style.display = "none";
    const heading = card.querySelector(".waitlist__heading") as HTMLElement;
    if (heading) heading.style.display = "none";
    const note = card.querySelector(".waitlist__note") as HTMLElement;
    if (note) note.style.display = "none";
    const subtitle = card.querySelector(".waitlist__subtitle") as HTMLElement;
    if (subtitle) subtitle.style.display = "none";

    // Read upsell data from card attributes
    const uConfirm = card.dataset.upsellConfirm || "";
    const uText = card.dataset.upsellText || "";
    const uHighlight = card.dataset.upsellHighlight || "";
    const uCta = card.dataset.upsellCta || "";
    const uNote = card.dataset.upsellNote || "";

    const remaining = Math.max(
      0,
      OFFER_DURATION - (Date.now() - saved.signedUpAt),
    );
    const expired = remaining <= 0;

    const success = document.createElement("div");
    success.className = "success-message";
    success.innerHTML = `
      <p class="success-confirm">${uConfirm}</p>
      <div class="upsell">
        <p class="upsell__text">${uText} <strong>${uHighlight}</strong></p>
        <div class="upsell__countdown">
          ${expired ? "Nabídka vypršela" : `Nabídka vyprší za <span class="upsell__timer">${formatTime(remaining)}</span>`}
        </div>
        ${expired ? "" : `<button type="button" class="btn-gold upsell__cta" id="upsell-checkout">${uCta}</button>`}
        <span class="upsell__note">${uNote}</span>
      </div>
    `;
    form.parentElement!.insertBefore(success, form.nextSibling);

    // Start countdown if not expired
    if (!expired) {
      const timerEl = success.querySelector(".upsell__timer") as HTMLElement;
      if (timerEl) startCountdown(saved.signedUpAt, timerEl);
    }
  }

  // --- Check for returning visitor on page load ---
  const savedData = getSavedData();
  if (savedData) {
    showUpsell(savedData);
  }

  // --- Validation ---
  const validators: Record<string, (v: string) => string> = {
    name: (v) => (v.trim().length >= 2 ? "" : "Prosím zadejte své jméno."),
    email: (v) =>
      /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(v)
        ? ""
        : "Prosím zadejte platný e-mail.",
    phone: (v) =>
      /^(\+?\d[\d\s\-]{7,})$/.test(v.trim())
        ? ""
        : "Prosím zadejte platné telefonní číslo.",
  };

  function validateFragrance(): boolean {
    const group = form.querySelector(".fragrance-toggle")!.parentElement!;
    const error = group.querySelector(".error-message") as HTMLElement;
    const checked = form.querySelector('input[name="fragrance"]:checked');
    const message = checked ? "" : "Prosím vyberte vůni.";
    error.textContent = message;
    return !message;
  }

  function validateField(input: HTMLInputElement) {
    const validate = validators[input.name];
    if (!validate) return true;

    const error = input.parentElement!.querySelector(
      ".error-message",
    ) as HTMLElement;
    const message = validate(input.value);
    error.textContent = message;
    input.classList.toggle("invalid", !!message);
    return !message;
  }

  // --- Form submit ---
  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    let isValid = true;

    if (!validateFragrance()) isValid = false;

    for (const field of Object.keys(validators)) {
      const input = form.querySelector(`[name="${field}"]`) as HTMLInputElement;
      if (!validateField(input)) isValid = false;
    }

    if (!isValid) return;

    const fragrance = (
      form.querySelector('input[name="fragrance"]:checked') as HTMLInputElement
    ).value;

    formData = {
      fragrance,
      name: (form.querySelector('[name="name"]') as HTMLInputElement).value,
      email: (form.querySelector('[name="email"]') as HTMLInputElement).value,
      phone: (form.querySelector('[name="phone"]') as HTMLInputElement).value,
    };

    // Disable submit button while sending
    const submitBtn = form.querySelector(
      ".waitlist__submit",
    ) as HTMLButtonElement;
    submitBtn.disabled = true;
    submitBtn.textContent = "Odesílám…";

    try {
      const response = await fetch(`${API_URL}/api/waitlist`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ ...formData, variant }),
      });

      const result = await response.json();

      if (!response.ok) {
        throw new Error(result.message || "Chyba serveru");
      }

      waitlistEntryId = result.entryId ?? null;
    } catch (err) {
      console.error("Waitlist submission failed:", err);
    }

    // Save to localStorage
    const data: WaitlistData = {
      signedUpAt: Date.now(),
      entryId: waitlistEntryId,
      email: formData.email,
      name: formData.name,
      phone: formData.phone,
      fragrance: formData.fragrance,
    };
    saveData(data);

    // Show upsell
    showUpsell(data);
  });

  // --- Upsell checkout — redirect to Stripe payment link ---
  document.addEventListener("click", (e) => {
    const btn = (e.target as HTMLElement).closest("#upsell-checkout");
    if (!btn) return;
    e.preventDefault();

    const paymentLink = card.dataset.upsellPaymentLink;
    if (paymentLink) {
      window.location.href = paymentLink;
    }
  });

  // --- Real-time validation on blur ---
  for (const input of form.querySelectorAll("input")) {
    input.addEventListener("blur", () => {
      validateField(input as HTMLInputElement);
    });
  }

  // --- Animated reveal: hand -> spray -> card (same on desktop & mobile) ---
  const isMobile = window.matchMedia("(max-width: 640px)").matches;
  const section = document.getElementById("waitlist");

  // Take over card animation from global animate-on-scroll
  card.classList.remove("animate-on-scroll");
  card.style.opacity = "0";
  card.style.transform = "translateY(30px)";

  function revealCard() {
    card.style.transition = "opacity 0.8s ease, transform 0.8s ease";
    card.style.opacity = "1";
    card.style.transform = "translateY(0)";
  }

  if (section) {
    const handLayer = section.querySelector(
      ".waitlist__layer--hand",
    ) as HTMLElement;
    const sprayLayer = section.querySelector(
      ".waitlist__layer--spray",
    ) as HTMLElement;

    const obs = new IntersectionObserver(
      (entries) => {
        for (const entry of entries) {
          if (entry.isIntersecting) {
            // Step 1: hand slides in from left
            if (handLayer) handLayer.classList.add("is-visible");
            // Step 2: after hand finishes, spray reveals from left with blur
            if (handLayer && sprayLayer) {
              handLayer.addEventListener(
                "animationend",
                () => {
                  sprayLayer.classList.add("is-visible");
                  // Step 3: after spray finishes, reveal card
                  sprayLayer.addEventListener("animationend", revealCard, {
                    once: true,
                  });
                },
                { once: true },
              );
            } else {
              revealCard();
            }
            obs.unobserve(section);
          }
        }
      },
      { threshold: 0.3 },
    );
    obs.observe(section);
  }
</script>

<style>
  .waitlist {
    padding: var(--space-2xl) var(--space-lg);
    background: var(--color-bg-primary);
    display: flex;
    align-items: center;
    justify-content: flex-end;
    min-height: 80vh;
    overflow: hidden;
    position: relative;
  }

  /* --- Desktop layered scene --- */
  .waitlist__scene {
    position: absolute;
    inset: 0;
    z-index: 0;
    pointer-events: none;
  }

  .waitlist__layer {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .waitlist__layer--bg {
    z-index: 0;
  }

  .waitlist__layer--hand {
    z-index: 2;
    object-position: left center;
    opacity: 0;
    transform: translateX(-60px);
  }

  .waitlist__layer--hand.is-visible {
    animation: handReveal 1s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  .waitlist__layer--spray {
    z-index: 1;
    object-position: center center;
    opacity: 0;
    filter: blur(25px);
    transform: translateX(-80px);
  }

  .waitlist__layer--spray.is-visible {
    animation: sprayReveal 1.2s cubic-bezier(0.25, 0.46, 0.45, 0.94) forwards;
  }

  @keyframes handReveal {
    0% {
      opacity: 0;
      transform: translateX(-60px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes sprayReveal {
    0% {
      opacity: 0;
      filter: blur(25px);
      transform: translateX(-80px);
    }
    60% {
      opacity: 1;
      filter: blur(10px);
      transform: translateX(-15px);
    }
    100% {
      opacity: 1;
      filter: blur(0px);
      transform: translateX(0);
    }
  }

  .waitlist__container {
    position: relative;
    z-index: 3;
    max-width: var(--max-width-narrow);
    width: 100%;
    margin-right: 10%;
  }

  .waitlist__card {
    padding: var(--space-xl);
    border: 2px solid transparent;
    border-radius: 16px;
    background:
      linear-gradient(var(--color-bg-primary), var(--color-bg-primary))
        padding-box,
      linear-gradient(
          135deg,
          var(--color-gold-dark),
          var(--color-gold-light),
          var(--color-gold-mid),
          var(--color-gold-dark)
        )
        border-box;
    text-align: center;
  }

  .waitlist__heading {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    color: var(--color-text-secondary);
    font-weight: 500;
    letter-spacing: 0.05em;
    text-transform: uppercase;
    margin-bottom: var(--space-sm);
  }

  .waitlist__subtitle {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .waitlist__subtitle strong {
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  .waitlist__form {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .fragrance-toggle {
    display: flex;
    gap: 0.5rem;
    margin-top: var(--space-xs);
  }

  .fragrance-toggle__input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .fragrance-toggle__label {
    flex: 1;
    text-align: center;
    padding: 0.75rem 0.5rem;
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    border: 1px solid rgba(255, 215, 0, 0.2);
    border-radius: var(--border-radius);
    cursor: pointer;
    transition:
      background var(--transition-fast),
      border-color var(--transition-fast),
      color var(--transition-fast);
  }

  .fragrance-toggle__label:hover {
    border-color: rgba(255, 215, 0, 0.4);
  }

  .fragrance-toggle__input:checked + .fragrance-toggle__label {
    background: rgba(255, 215, 0, 0.12);
    border-color: var(--color-gold);
    color: var(--color-gold);
  }

  .form-group {
    text-align: left;
  }

  .form-group label {
    display: block;
    font-size: 0.85rem;
    font-weight: 500;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .form-group input {
    width: 100%;
    padding: 0.9rem 1rem;
    background: var(--color-bg-input);
    border: 1px solid rgba(255, 215, 0, 0.15);
    border-radius: var(--border-radius);
    color: var(--color-text-primary);
    font-family: var(--font-body);
    font-size: 1rem;
    transition:
      border-color var(--transition-fast),
      box-shadow var(--transition-fast);
  }

  .form-group input::placeholder {
    color: var(--color-text-muted);
  }

