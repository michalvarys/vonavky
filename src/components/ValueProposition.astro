---
import type { SiteContent } from '../data/content';
interface Props { value: SiteContent['value'] }
const { value } = Astro.props;

const icons = [
  `<path d="M24 4C24 4 8 18 8 28C8 37 15 44 24 44C33 44 40 37 40 28C40 18 24 4 24 4Z"></path><path d="M24 36C28 36 32 33 32 28" opacity="0.5"></path>`,
  `<circle cx="24" cy="24" r="18"></circle><path d="M24 12V24L32 28"></path>`,
  `<path d="M24 4L28.5 17H42L31 25.5L35 39L24 30L13 39L17 25.5L6 17H19.5L24 4Z"></path>`,
  `<rect x="8" y="8" width="32" height="32" rx="4"></rect><path d="M16 24L22 30L34 18"></path>`,
];
---

<section class="value" id="value">
  <div class="value__container">
    <div class="value__intro animate-on-scroll">
      <span class="value__label">{value.label}</span>
      <h2 class="value__heading">{value.heading}</h2>
      <p class="value__subtext" set:html={value.subtext} />
    </div>

    <div class="value__grid">
      {value.cards.map((card, i) => (
        <div class="value__card animate-on-scroll">
          <div class="value__card-header">
            <div class="value__icon">
              <svg viewBox="0 0 48 48" fill="none" stroke="var(--color-gold)" stroke-width="1.5" aria-hidden="true">
                <Fragment set:html={icons[i] || icons[0]} />
              </svg>
            </div>
            <h3 class="value__card-title">{card.title}</h3>
          </div>
          <p class="value__card-text" set:html={card.text} />
        </div>
      ))}
    </div>

    <div class="value__price-anchor animate-on-scroll">
      <div class="value__price-steps">
        <div class="value__price-step">
          <span class="value__price-step-label">{value.pricing.marketLabel}</span>
          <span class="value__price-market">{value.pricing.marketPrice}</span>
        </div>
        <div class="value__price-step">
          <span class="value__price-step-label">{value.pricing.retailLabel}</span>
          <span class="value__price-retail">{value.pricing.retailPrice}</span>
        </div>
        <div class="value__price-step value__price-step--highlight">
          <span class="value__price-step-label">{value.pricing.yourLabel}</span>
          <span class="value__price-yours">{value.pricing.yourPrice}</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .value {
    padding: var(--space-2xl) var(--space-lg);
    background-color: var(--color-bg-primary);
  }

  .value__container {
    max-width: 1000px;
    margin: 0 auto;
  }

  .value__intro {
    text-align: center;
    margin-bottom: var(--space-2xl);
  }

  .value__label {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.4em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--space-md);
    border: 1px solid transparent;
    padding: 0.4rem 1.2rem;
    border-radius: 50px;
    background:
      linear-gradient(var(--color-bg-primary), var(--color-bg-primary)) padding-box,
      linear-gradient(135deg, var(--color-gold-dark), var(--color-gold-light), var(--color-gold-dark)) border-box;
  }

  .value__heading {
    font-size: clamp(2rem, 6vw, 3.5rem);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
  }

  .value__subtext {
    color: var(--color-text-secondary);
    font-size: 1.15rem;
    line-height: 1.8;
    max-width: 600px;
    margin: 0 auto;
  }

  .value__grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--space-md);
    margin-bottom: var(--space-xl);
  }

  @media (min-width: 600px) {
    .value__grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .value__card {
    position: relative;
    padding: var(--space-md);
    border-radius: 12px;
    background: var(--color-bg-primary);
    transition:
      background var(--transition-medium),
      box-shadow var(--transition-medium);
    z-index: 0;
  }

  .value__card::before,
  .value__card::after {
    content: '';
    position: absolute;
    inset: 0;
    border-radius: inherit;
    padding: 1px;
    pointer-events: none;
    -webkit-mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    -webkit-mask-composite: xor;
    mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
    mask-composite: exclude;
    transition: opacity var(--transition-medium);
  }

  .value__card::before {
    background: linear-gradient(135deg, rgba(196, 149, 48, 0.3), rgba(255, 215, 0, 0.45), rgba(196, 149, 48, 0.3));
  }

  .value__card::after {
    background: linear-gradient(135deg, var(--color-gold-dark), var(--color-gold-light), var(--color-gold-dark));
    opacity: 0;
  }

  .value__card:hover {
    background: var(--color-bg-elevated);
    box-shadow: 0 4px 30px rgba(255, 215, 0, 0.08);
  }

  .value__card:hover::before {
    opacity: 0;
  }

  .value__card:hover::after {
    opacity: 1;
  }

  .value__card:nth-child(2) {
    transition-delay: 0.1s;
  }
  .value__card:nth-child(3) {
    transition-delay: 0.2s;
  }
  .value__card:nth-child(4) {
    transition-delay: 0.3s;
  }

  .value__card-header {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 0.25rem;
  }

  .value__icon {
    width: 28px;
    height: 28px;
    flex-shrink: 0;
  }

  .value__icon svg {
    width: 100%;
    height: 100%;
  }

  .value__card-title {
    font-size: 1.3rem;
    color: var(--color-gold);
  }

  .value__card-text {
    color: var(--color-text-secondary);
    font-size: 1.1rem;
    line-height: 1.6;
  }

  /* Price anchor */
  .value__price-anchor {
    text-align: center;
    padding: var(--space-lg) 0 0;
  }

  .value__price-steps {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .value__price-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.15rem;
  }

  .value__price-step-label {
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--color-text-muted);
  }

  .value__price-market {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--color-text-muted);
    text-decoration: line-through;
    text-decoration-thickness: 2px;
  }

  .value__price-retail {
    font-family: var(--font-heading);
    font-size: clamp(1.5rem, 4vw, 2rem);
    color: var(--color-text-secondary);
  }

  .value__price-step--highlight .value__price-step-label {
    color: var(--color-gold);
  }

  .value__price-yours {
    font-family: var(--font-heading);
    font-size: clamp(3.5rem, 12vw, 5rem);
    font-weight: 700;
    color: var(--color-gold);
    line-height: 1;
  }
</style>
