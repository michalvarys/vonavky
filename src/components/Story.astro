---
import type { SiteContent } from "../data/content";
interface Props {
  story: SiteContent["story"];
}
const { story } = Astro.props;

function buildSampleLink(base: string, fragrance: string): string {
  const url = new URL(base);
  url.searchParams.set("fragrance", fragrance);
  return url.toString();
}
---

<!-- PRO NÄšJ -->
<section class="story story--him" id="story">
  <div class="story__container animate-on-scroll">
    <span class="story__badge">{story.him.badge}</span>
    <h2 class="story__name">{story.him.name}</h2>
    <p class="story__text" set:html={story.him.text} />
    <p class="story__evoke" set:html={story.him.evoke} />
    {
      story.sampleCta && story.samplePaymentLink && (
        <a
          href={buildSampleLink(story.samplePaymentLink, "him")}
          class="btn-gold story__sample-cta"
        >
          {story.sampleCta}
        </a>
      )
    }
  </div>
</section>

<!-- PRO NI -->
<section class="story story--her">
  <div class="story__container animate-on-scroll">
    <span class="story__badge story__badge--fem">{story.her.badge}</span>
    <h2 class="story__name" set:html={story.her.name} />
    <p class="story__text" set:html={story.her.text} />
    <p class="story__evoke story__evoke--fem" set:html={story.her.evoke} />
    {
      story.sampleCta && story.samplePaymentLink && (
        <a
          href={buildSampleLink(story.samplePaymentLink, "her")}
          class="btn-gold story__sample-cta"
        >
          {story.sampleCta}
        </a>
      )
    }
  </div>
</section>

<!-- EXCLUSIVE -->
{
  story.exclusive && (
    <section class="story story--exclusive">
      <div class="story__container animate-on-scroll">
        <p class="story__exclusive-text">
          <Fragment set:html={story.exclusive.text} />{" "}
          <strong>
            <Fragment set:html={story.exclusive.highlight} />
          </strong>
          .
        </p>
        <a href="#waitlist" class="btn-outline story__exclusive-cta">
          {story.exclusive.cta}
        </a>
      </div>
    </section>
  )
}

<style>
  .story {
    padding: var(--space-2xl) var(--space-lg);
  }

  .story--him {
    background-color: var(--color-bg-secondary);
  }

  .story--her {
    background-color: var(--color-bg-primary);
  }

  .story--exclusive {
    background-color: var(--color-bg-secondary);
  }

  .story__container {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
  }

  .story__badge {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.3em;
    text-transform: uppercase;
    color: var(--color-bg-primary);
    background: linear-gradient(
      135deg,
      var(--color-gold) 0%,
      var(--color-gold-mid) 40%,
      var(--color-gold-light) 70%,
      var(--color-gold-mid) 100%
    );
    padding: 0.35rem 1rem;
    border-radius: 4px;
    margin-bottom: var(--space-md);
  }

  .story__badge--fem {
    background: linear-gradient(
      135deg,
      var(--color-gold) 0%,
      var(--color-gold-light) 50%,
      var(--color-gold-mid) 100%
    );
  }

  .story__name {
    font-size: clamp(1.8rem, 5vw, 2.8rem);
    color: var(--color-text-primary);
    margin-bottom: var(--space-md);
    line-height: 1.2;
  }

  .story__text {
    color: var(--color-text-secondary);
    font-size: 1.15rem;
    line-height: 1.8;
    margin-bottom: var(--space-lg);
  }

  /* Evocative description */
  .story__evoke {
    font-style: italic;
    font-size: 1.05rem;
    line-height: 1.7;
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    opacity: 0.7;
    margin-top: var(--space-sm);
  }

  .story__evoke--fem {
    background: linear-gradient(
      135deg,
      var(--color-gold-light),
      var(--color-gold),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  /* Sample CTA under him/her sections */
  .story__sample-cta {
    display: inline-block;
    margin-top: var(--space-lg);
    padding: 0.9rem 2.5rem;
    font-size: 1rem;
  }

  /* Exclusive callout */
  .story__exclusive-text {
    font-size: clamp(1.15rem, 3vw, 1.35rem);
    line-height: 1.8;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
  }

  .story__exclusive-text strong {
    background: linear-gradient(
      135deg,
      var(--color-gold),
      var(--color-gold-light),
      var(--color-gold-mid)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  .story__exclusive-cta {
    padding: 0.9rem 2.5rem;
    font-size: 1rem;
  }
</style>
