<section class="hero">
  <div class="hero__glow"></div>
  <div class="hero__glow hero__glow--2"></div>

  <div class="hero__content">
    <span class="hero__preheadline">Limitovaná edice 2026</span>
    <h1 class="hero__title">Zanech stopu</h1>
    <p class="hero__subtitle">
      Vůně, po&nbsp;které se&nbsp;otočí. Jedno stříknutí a&nbsp;necháš stopu,
      na&nbsp;kterou lidi kolem&nbsp;jen tak nezapomenou.
    </p>
    <a href="#waitlist" class="btn-gold hero__cta">To mě zajímá</a>
  </div>

  <div class="hero__bottle">
    <img
      src="/vonavky/hero-image.png"
      alt="Luxusní parfém – limitovaná edice 2026"
      class="hero__bottle-img"
    />
  </div>

  <div class="hero__particles" aria-hidden="true"></div>
  <div class="hero__vignette" aria-hidden="true"></div>

  <div class="hero__scroll-hint" aria-hidden="true">
    <svg
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="1.5"
    >
      <path d="M12 5v14M5 12l7 7 7-7"></path>
    </svg>
  </div>
</section>

<style>
  .hero {
    min-height: 100svh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-lg);
    padding-top: 2rem;
    position: relative;
    overflow: hidden;
  }

  .hero__glow {
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 700px;
    height: 700px;
    background: radial-gradient(
      circle,
      rgba(212, 168, 67, 0.12) 0%,
      transparent 65%
    );
    pointer-events: none;
    will-change: transform;
  }

  .hero__glow--2 {
    top: 70%;
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      rgba(212, 168, 67, 0.06) 0%,
      transparent 70%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 700px;
    will-change: transform;
  }

  .hero__preheadline {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: 600;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    background: linear-gradient(
      90deg,
      var(--color-gold-dark) 0%,
      var(--color-gold-light) 40%,
      var(--color-gold) 60%,
      var(--color-gold-dark) 100%
    );
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation:
      fadeInUp 0.8s ease forwards,
      shimmer 3s ease-in-out infinite;
    animation-delay: 0.2s, 0s;
    opacity: 0;
    margin-bottom: var(--space-sm);
  }

  .hero__title {
    font-size: clamp(2.5rem, 10vw, 5.5rem);
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
    opacity: 0;
    text-shadow: 0 0 80px rgba(212, 168, 67, 0.08);
  }

  /* Static fallback — replaced by JS char reveal on desktop */
  .hero__title:not(.hero__title--split) {
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 0.4s;
  }

  :global(.hero__title-char) {
    display: inline-block;
    opacity: 0;
    animation: charReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes charReveal {
    0% {
      opacity: 0;
      transform: translateY(40px);
      filter: blur(4px);
    }
    60% {
      filter: blur(0);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .hero__subtitle {
    font-size: clamp(0.95rem, 3.5vw, 1.5rem);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-lg);
    line-height: 1.6;
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 0.6s;
    opacity: 0;
    max-width: 560px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero__cta {
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 0.8s;
    opacity: 0;
    font-size: 1rem;
    padding: 0.85rem 2.5rem;
  }

  .hero__bottle {
    position: relative;
    z-index: 1;
    margin-top: var(--space-md);
    animation: fadeInUp 1s ease forwards;
    animation-delay: 1s;
    opacity: 0;
    will-change: transform;
  }

  .hero__bottle-img {
    width: 75vw;
    max-width: 340px;
    height: auto;
    display: block;
    filter: drop-shadow(0 0 60px rgba(212, 168, 67, 0.3));
    animation: levitate 4s ease-in-out infinite;
  }

  .hero__scroll-hint {
    position: absolute;
    bottom: var(--space-lg);
    color: var(--color-gold);
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 1.5s;
    opacity: 0;
  }

  .hero__scroll-hint svg {
    animation: float 2s ease-in-out infinite;
  }

  .hero__vignette {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      rgba(8, 8, 8, 0.4) 0%,
      transparent 15%,
      transparent 85%,
      rgba(8, 8, 8, 0.6) 100%
    );
    pointer-events: none;
    z-index: 0;
  }

  /* Elegant floating particles */
  .hero__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  :global(.hero__particle) {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(212, 168, 67, var(--p-opacity, 0.25)) 0%,
      transparent 70%
    );
    animation: particleFloat var(--p-dur, 20s) ease-in-out infinite;
    animation-delay: var(--p-delay, 0s);
    will-change: transform, opacity;
  }

  @keyframes particleFloat {
    0% {
      transform: translate(0, 0) scale(1);
      opacity: var(--p-opacity, 0.25);
    }
    25% {
      transform: translate(var(--p-dx1, 30px), var(--p-dy1, -60px)) scale(1.1);
      opacity: calc(var(--p-opacity, 0.25) * 1.3);
    }
    50% {
      transform: translate(var(--p-dx2, -20px), var(--p-dy2, -120px)) scale(0.9);
      opacity: var(--p-opacity, 0.25);
    }
    75% {
      transform: translate(var(--p-dx3, 15px), var(--p-dy3, -60px)) scale(1.05);
      opacity: calc(var(--p-opacity, 0.25) * 0.8);
    }
    100% {
      transform: translate(0, 0) scale(1);
      opacity: var(--p-opacity, 0.25);
    }
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  @media (min-width: 768px) {
    .hero__bottle-img {
      max-width: 560px;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      flex-direction: row;
      align-items: center;
      justify-content: center;
      text-align: left;
      padding: var(--space-lg) 6%;
      padding-top: var(--space-lg);
      gap: 2rem;
    }

    .hero__content {
      position: relative;
      z-index: 2;
      flex: 1;
      min-width: 0;
    }

    .hero__preheadline {
      font-size: 1rem;
      margin-bottom: var(--space-lg);
    }

    .hero__title {
      margin-bottom: var(--space-lg);
    }

    .hero__subtitle {
      margin-left: 0;
      margin-bottom: var(--space-xl);
    }

    .hero__cta {
      font-size: 1.2rem;
      padding: 1.2rem 3.5rem;
    }

    .hero__bottle {
      position: relative;
      right: auto;
      bottom: auto;
      margin-top: 0;
      animation-delay: 0.8s;
      flex: 0 0 auto;
    }

    .hero__bottle-img {
      width: auto;
      max-width: none;
      height: 70vh;
      animation: none;
      filter: drop-shadow(0 0 80px rgba(212, 168, 67, 0.35));
    }

    .hero__glow {
      left: 60%;
    }
  }
</style>

<script>
  const prefersReducedMotion = window.matchMedia(
    "(prefers-reduced-motion: reduce)",
  ).matches;
  const isTouchDevice =
    "ontouchstart" in window || navigator.maxTouchPoints > 0;
  const isDesktop = window.innerWidth >= 1024;

  const hero = document.querySelector(".hero") as HTMLElement;
  const glow1 = hero.querySelector(
    ".hero__glow:not(.hero__glow--2)",
  ) as HTMLElement;
  const glow2 = hero.querySelector(".hero__glow--2") as HTMLElement;
  const bottle = hero.querySelector(".hero__bottle") as HTMLElement;
  const content = hero.querySelector(".hero__content") as HTMLElement;
  const title = hero.querySelector(".hero__title") as HTMLElement;

  // Character-by-character reveal (works on all screen sizes)
  if (!prefersReducedMotion && title) {
    const text = title.textContent || "";
    title.innerHTML = "";
    title.classList.add("hero__title--split");
    title.style.opacity = "1";

    text.split("").forEach((char, i) => {
      const span = document.createElement("span");
      span.textContent = char === " " ? "\u00A0" : char;
      span.className = "hero__title-char";
      span.style.animationDelay = `${0.4 + i * 0.04}s`;
      title.appendChild(span);
    });
  }

  // Elegant floating particles — all screen sizes
  if (!prefersReducedMotion) {
    const particlesContainer = hero.querySelector(
      ".hero__particles",
    ) as HTMLElement;
    const PARTICLE_COUNT = 30;

    for (let i = 0; i < PARTICLE_COUNT; i++) {
      const dot = document.createElement("div");
      dot.className = "hero__particle";

      const size = 2 + Math.random() * 4;
      const x = Math.random() * 100;
      const y = Math.random() * 100;
      const opacity = 0.12 + Math.random() * 0.2;
      const duration = 16 + Math.random() * 14;
      const delay = -(Math.random() * duration);

      // Random drift distances for organic movement
      const dx1 = (Math.random() - 0.5) * 80;
      const dy1 = -30 - Math.random() * 80;
      const dx2 = (Math.random() - 0.5) * 60;
      const dy2 = -60 - Math.random() * 100;
      const dx3 = (Math.random() - 0.5) * 70;
      const dy3 = -20 - Math.random() * 60;

      dot.style.cssText = `
        width: ${size}px;
        height: ${size}px;
        left: ${x}%;
        top: ${y}%;
        --p-opacity: ${opacity};
        --p-dur: ${duration}s;
        --p-delay: ${delay}s;
        --p-dx1: ${dx1}px;
        --p-dy1: ${dy1}px;
        --p-dx2: ${dx2}px;
        --p-dy2: ${dy2}px;
        --p-dx3: ${dx3}px;
        --p-dy3: ${dy3}px;
      `;

      particlesContainer.appendChild(dot);
    }
  }

  // Interactive effects — desktop only
  if (!prefersReducedMotion && !isTouchDevice && isDesktop) {
    // State
    let mouseX = 0;
    let mouseY = 0;
    let targetX = 0;
    let targetY = 0;
    let velocity = 0;
    let glowIntensity = 0;
    let animId: number;
    const LERP = 0.06;

    // Mouse tracking
    hero.addEventListener(
      "mousemove",
      (e: MouseEvent) => {
        const rect = hero.getBoundingClientRect();
        targetX = (e.clientX - rect.left) / rect.width - 0.5;
        targetY = (e.clientY - rect.top) / rect.height - 0.5;
      },
      { passive: true },
    );

    hero.addEventListener(
      "mouseleave",
      () => {
        targetX = 0;
        targetY = 0;
      },
      { passive: true },
    );

    // Animation loop
    function animate() {
      // Lerp mouse
      const prevX = mouseX;
      const prevY = mouseY;
      mouseX += (targetX - mouseX) * LERP;
      mouseY += (targetY - mouseY) * LERP;

      // Velocity (for glow intensity)
      const dx = mouseX - prevX;
      const dy = mouseY - prevY;
      const v = Math.sqrt(dx * dx + dy * dy);
      velocity = velocity * 0.92 + v * 0.08;
      glowIntensity = Math.min(velocity * 80, 1);

      // Update glows
      const g1x = mouseX * 120;
      const g1y = mouseY * 90;
      const g2x = mouseX * 70;
      const g2y = mouseY * 60;
      const scale1 = 1 + glowIntensity * 0.15;
      const scale2 = 1 + glowIntensity * 0.1;

      glow1.style.transform = `translate(calc(-50% + ${g1x}px), calc(-50% + ${g1y}px)) scale(${scale1})`;
      glow2.style.transform = `translate(calc(-50% + ${g2x}px), calc(-50% + ${g2y}px)) scale(${scale2})`;

      // Parallax on content & bottle
      content.style.transform = `translate3d(${mouseX * -15}px, ${mouseY * -10}px, 0)`;
      bottle.style.transform = `translate3d(${mouseX * 40}px, ${mouseY * 25}px, 0)`;

      animId = requestAnimationFrame(animate);
    }

    animate();

    // Pause when tab hidden
    document.addEventListener("visibilitychange", () => {
      if (document.hidden) {
        cancelAnimationFrame(animId);
      } else {
        animate();
      }
    });
  }
</script>
