<style>
  .hero {
    min-height: 100svh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-lg);
    position: relative;
    overflow: hidden;
  }

  .hero__glow {
    position: absolute;
    top: 40%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 700px;
    height: 700px;
    background: radial-gradient(
      circle,
      rgba(212, 168, 67, 0.12) 0%,
      transparent 65%
    );
    pointer-events: none;
    will-change: transform;
  }

  .hero__glow--2 {
    top: 70%;
    width: 400px;
    height: 400px;
    background: radial-gradient(
      circle,
      rgba(212, 168, 67, 0.06) 0%,
      transparent 70%
    );
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 700px;
    will-change: transform;
  }

  .hero__preheadline {
    display: inline-block;
    font-family: var(--font-body);
    font-size: 1rem;
    font-weight: 600;
    letter-spacing: 0.35em;
    text-transform: uppercase;
    background: linear-gradient(
      90deg,
      var(--color-gold-dark) 0%,
      var(--color-gold-light) 40%,
      var(--color-gold) 60%,
      var(--color-gold-dark) 100%
    );
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation:
      fadeInUp 0.8s ease forwards,
      shimmer 3s ease-in-out infinite;
    animation-delay: 0.2s, 0s;
    opacity: 0;
    margin-bottom: var(--space-lg);
  }

  .hero__title {
    font-size: clamp(3rem, 10vw, 6.5rem);
    color: var(--color-text-primary);
    margin-bottom: var(--space-lg);
    opacity: 0;
    text-shadow: 0 0 80px rgba(212, 168, 67, 0.08);
  }

  /* Static fallback — replaced by JS char reveal on desktop */
  .hero__title:not(.hero__title--split) {
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 0.4s;
  }

  :global(.hero__title-char) {
    display: inline-block;
    opacity: 0;
    animation: charReveal 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }

  @keyframes charReveal {
    0% {
      opacity: 0;
      transform: translateY(40px);
      filter: blur(4px);
    }
    60% {
      filter: blur(0);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
      filter: blur(0);
    }
  }

  .hero__subtitle {
    font-size: clamp(1.15rem, 3.5vw, 1.5rem);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
    line-height: 1.8;
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 0.6s;
    opacity: 0;
    max-width: 560px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero__cta {
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 0.8s;
    opacity: 0;
    font-size: 1.2rem;
    padding: 1.2rem 3.5rem;
  }

  .hero__bottle {
    position: relative;
    z-index: 1;
    margin-top: var(--space-xl);
    animation: fadeInUp 1s ease forwards;
    animation-delay: 1s;
    opacity: 0;
    will-change: transform;
  }

  .hero__bottle-placeholder {
    width: 130px;
    filter: drop-shadow(0 0 40px rgba(212, 168, 67, 0.2));
    animation: levitate 4s ease-in-out infinite;
  }

  .hero__bottle-placeholder svg {
    width: 100%;
    height: auto;
  }

  .hero__scroll-hint {
    position: absolute;
    bottom: var(--space-lg);
    color: var(--color-gold);
    animation: fadeInUp 0.8s ease forwards;
    animation-delay: 1.5s;
    opacity: 0;
  }

  .hero__scroll-hint svg {
    animation: float 2s ease-in-out infinite;
  }

  /* Particles */
  :global(.hero__particles) {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 0;
    overflow: hidden;
  }

  :global(.hero__particle) {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(212, 168, 67, 0.6) 0%, transparent 70%);
    pointer-events: none;
    will-change: transform;
  }

  @keyframes float {
    0%,
    100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(8px);
    }
  }

  @keyframes particlePulse {
    0%, 100% { opacity: var(--p-opacity, 0.3); }
    50% { opacity: calc(var(--p-opacity, 0.3) * 1.6); }
  }

  @media (min-width: 768px) {
    .hero__bottle-placeholder {
      width: 170px;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      flex-direction: row;
      gap: var(--space-xl);
      text-align: left;
    }

    .hero__content {
      flex: 1;
    }

    .hero__subtitle {
      margin-left: 0;
    }

    .hero__bottle {
      flex-shrink: 0;
      margin-top: 0;
    }

    .hero__bottle-placeholder {
      width: 220px;
    }

    .hero__glow {
      left: 60%;
    }
  }
</style>

<script>
  const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
  const isTouchDevice = 'ontouchstart' in window || navigator.maxTouchPoints > 0;
  const isDesktop = window.innerWidth >= 1024;

  const hero = document.querySelector('.hero') as HTMLElement;
  const glow1 = hero.querySelector('.hero__glow:not(.hero__glow--2)') as HTMLElement;
  const glow2 = hero.querySelector('.hero__glow--2') as HTMLElement;
  const bottle = hero.querySelector('.hero__bottle') as HTMLElement;
  const content = hero.querySelector('.hero__content') as HTMLElement;
  const title = hero.querySelector('.hero__title') as HTMLElement;

  // Character-by-character reveal (works on all screen sizes)
  if (!prefersReducedMotion && title) {
    const text = title.textContent || '';
    title.innerHTML = '';
    title.classList.add('hero__title--split');
    title.style.opacity = '1';

    text.split('').forEach((char, i) => {
      const span = document.createElement('span');
      span.textContent = char === ' ' ? '\u00A0' : char;
      span.className = 'hero__title-char';
      span.style.animationDelay = `${0.4 + i * 0.04}s`;
      title.appendChild(span);
    });
  }

  // Interactive effects — desktop only
  if (!prefersReducedMotion && !isTouchDevice && isDesktop) {
    // State
    let mouseX = 0;
    let mouseY = 0;
    let targetX = 0;
    let targetY = 0;
    let velocity = 0;
    let glowIntensity = 0;
    let isMouseInHero = false;
    let animId: number;
    const LERP = 0.06;

    // Particles
    const PARTICLES = [
      { count: 10, sizeMin: 2, sizeMax: 3, opMin: 0.12, opMax: 0.25, speed: 0.015 },
      { count: 10, sizeMin: 3, sizeMax: 5, opMin: 0.15, opMax: 0.35, speed: 0.04 },
      { count: 5, sizeMin: 4, sizeMax: 7, opMin: 0.2, opMax: 0.45, speed: 0.08 },
    ];

    const particleContainer = document.createElement('div');
    particleContainer.className = 'hero__particles';
    particleContainer.setAttribute('aria-hidden', 'true');
    hero.insertBefore(particleContainer, hero.firstChild);

    interface Particle {
      el: HTMLElement;
      baseX: number;
      baseY: number;
      speed: number;
      driftX: number;
      driftY: number;
      driftSpeed: number;
      driftOffset: number;
    }

    const particles: Particle[] = [];

    PARTICLES.forEach((layer) => {
      for (let i = 0; i < layer.count; i++) {
        const el = document.createElement('div');
        el.className = 'hero__particle';
        const size = layer.sizeMin + Math.random() * (layer.sizeMax - layer.sizeMin);
        const opacity = layer.opMin + Math.random() * (layer.opMax - layer.opMin);
        const baseX = Math.random() * 100;
        const baseY = Math.random() * 100;

        el.style.width = `${size}px`;
        el.style.height = `${size}px`;
        el.style.setProperty('--p-opacity', String(opacity));
        el.style.opacity = String(opacity);
        el.style.left = `${baseX}%`;
        el.style.top = `${baseY}%`;
        el.style.animation = `particlePulse ${3 + Math.random() * 4}s ease-in-out ${Math.random() * 3}s infinite`;

        particleContainer.appendChild(el);

        particles.push({
          el,
          baseX,
          baseY,
          speed: layer.speed,
          driftX: (Math.random() - 0.5) * 60,
          driftY: (Math.random() - 0.5) * 40,
          driftSpeed: 0.0003 + Math.random() * 0.0005,
          driftOffset: Math.random() * Math.PI * 2,
        });
      }
    });

    // Mouse tracking
    hero.addEventListener('mousemove', (e: MouseEvent) => {
      const rect = hero.getBoundingClientRect();
      targetX = (e.clientX - rect.left) / rect.width - 0.5;
      targetY = (e.clientY - rect.top) / rect.height - 0.5;
      isMouseInHero = true;
    }, { passive: true });

    hero.addEventListener('mouseleave', () => {
      isMouseInHero = false;
      targetX = 0;
      targetY = 0;
    }, { passive: true });

    // Animation loop
    let frame = 0;
    const now = performance.now.bind(performance);

    function animate() {
      frame++;
      const t = now();

      // Lerp mouse
      const prevX = mouseX;
      const prevY = mouseY;
      mouseX += (targetX - mouseX) * LERP;
      mouseY += (targetY - mouseY) * LERP;

      // Velocity (for glow intensity)
      const dx = mouseX - prevX;
      const dy = mouseY - prevY;
      const v = Math.sqrt(dx * dx + dy * dy);
      velocity = velocity * 0.92 + v * 0.08;
      glowIntensity = Math.min(velocity * 80, 1);

      // Update glows
      const g1x = mouseX * 120;
      const g1y = mouseY * 90;
      const g2x = mouseX * 70;
      const g2y = mouseY * 60;
      const scale1 = 1 + glowIntensity * 0.15;
      const scale2 = 1 + glowIntensity * 0.1;

      glow1.style.transform = `translate(calc(-50% + ${g1x}px), calc(-50% + ${g1y}px)) scale(${scale1})`;
      glow2.style.transform = `translate(calc(-50% + ${g2x}px), calc(-50% + ${g2y}px)) scale(${scale2})`;

      // Parallax on content & bottle
      content.style.transform = `translate3d(${mouseX * -8}px, ${mouseY * -5}px, 0)`;
      bottle.style.transform = `translate3d(${mouseX * 25}px, ${mouseY * 15}px, 0)`;

      // Update particles (every 2nd frame)
      if (frame % 2 === 0) {
        for (const p of particles) {
          const drift = Math.sin(t * p.driftSpeed + p.driftOffset);
          const px = p.driftX * drift + mouseX * p.speed * hero.offsetWidth;
          const py = p.driftY * Math.cos(t * p.driftSpeed * 0.7 + p.driftOffset) + mouseY * p.speed * hero.offsetHeight;
          p.el.style.transform = `translate3d(${px}px, ${py}px, 0)`;
        }
      }

      animId = requestAnimationFrame(animate);
    }

    animate();

    // Pause when tab hidden
    document.addEventListener('visibilitychange', () => {
      if (document.hidden) {
        cancelAnimationFrame(animId);
      } else {
        animate();
      }
    });
  }
</script>
